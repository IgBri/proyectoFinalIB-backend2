<section>
    <div>
        <form id="formProperties">
            <div>
                <label>DNI del propietario</label>
                <input type="number" name="dni" placeholder="DNI">
            </div>
            <div>
                <label>Direccion</label>
                <input type="text" name="addressName" placeholder="Domicilio">
                <input type="number" name="addressNumber" placeholder="Numeracion">
            </div>
            <div>
                <label>Gestion inmobiliaria</label>
                <select name="useStatus">
                    <!--<option value="sale">Venta</option>-->
                    <option value="rent">Renta</option>
                </select>
            </div>
            <div>
                <label>Precio</label>
                <input type="number" name="monetaryValue" placeholder="Valor monetario">
                <select name="currency">
                    <option value="ars">ARS</option>
                    <option value="usd">USD</option>
                    <option value="eur">EUR</option>
                </select>
            </div>
            <div>
                <label>Cantidad maxima de dias por renta</label>
                <input type="number" name="daysAvaliable">
            </div>

            <button type="submit">Registrar inmueble</button>
        </form>
        <a href="/">Volver a vista principal</a>
    </div>
</section>

<link rel="stylesheet" href="/css/registerProperty.css">
<script src="/js/registerProperty.js" defer></script>